
<h1 class="page-title">Sign Up for Fiddlevent</h1>


<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>
  <fieldset>
    <%= f.show_errors %>
  
    <div class="control-group">
      <%= f.label :email, :class => 'control-label' %>
      <div class="controls"><%= f.email_field :email %></div>
    </div>
  
    <div class="control-group">
      <%= f.label :password, :class => 'control-label' %>
      <div class="controls"><%= f.password_field :password %></div>
    </div>
  
    <div class="control-group">
      <%= f.label :password_confirmation, :class => 'control-label' %>
      <div class="controls"><%= f.password_field :password_confirmation %></div>
    </div>
  
    <div class="control-group">
      <%= f.label :user_type, :class => 'control-label' %>
      <div class="controls"><%= f.select :user_type, {"Merchant" => :merchant, "Customer" => :customer}, :selected => params[:type] %></div>
    </div>

    <!-- Disabled for now
      <div class="form-item">
        <%# recaptcha_tags %>
      </div> -->

    <div class="form-actions">
      <%= f.submit "Sign up", :class => 'btn btn-primary' %>
      <%= link_to "Cancel", {:controller => :pages, :action => :register}, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
  


<p>
  <%= render :partial => "devise/shared/links" %>
</p>