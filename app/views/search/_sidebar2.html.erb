<% use_filter_tab = (cookies[:sTab] != "liked") %>
<div id="sidebar">
  <div id="sidebar-header">
    <ul class="nav nav-tabs">
      <li class="<%= "active" if use_filter_tab %> sidebar-first"><a href="#sidebar-filter" data-toggle="tab" id="sidebar-tab-narrow">Narrow Results</a></li>
      <li class="<%= "active" unless use_filter_tab %>"><a href="#sidebar-liked" data-toggle="tab" id="sidebar-tab-events">Liked Events</a></li>
    </ul>
  </div>
  <div class="tab-content">
    
    <!-- Narrow Results -->
    <div class="tab-pane <%= "active" if use_filter_tab %>" id="sidebar-filter">
      <div class="sidebar-content">
        <%= render :partial => 'sidebar_filter' %>
      </div>
      <div class="sidebar-actions">
        <button type="submit" class="btn">Update</button>
      </div>
    </div>
    
    <!-- Liked Events -->
    <div class="tab-pane <%= "active" unless use_filter_tab %>" id="sidebar-liked">
      <div class="sidebar-content">
        <%= render :partial => 'sidebar_cart' %>
      </div>
      <div class="sidebar-actions">
        
      </div>
    </div>
  </div>
</div>