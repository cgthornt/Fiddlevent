source 'https://rubygems.org'

gem 'rails', '3.2.11'

gem "mysql2"
gem "json"

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
  gem 'libv8', '~> 3.11.8'
  gem 'less-rails'
  gem "therubyracer", :require => 'v8'
end

gem 'jquery-rails'
gem 'jquery-ui-rails'
gem 'simple_form'


# Deploy with Capistrano
gem 'capistrano'

group :development do
  # Development mode is very slow, so the 'rails-dev-boost' gem makes development faster.
  # The 'rb-fsevent' gem required for the rails dev boost
  gem 'rails-dev-boost'
  gem 'rb-fsevent', '~> 0.9.1'
  
  # To get rid of annoying "chunked" errors with ruby 1.9
  gem 'thin' 
end

gem "devise"
gem "cancan"
gem 'awesome_nested_set'
gem "recaptcha", :require => "recaptcha/rails"
gem "dynamic_form"
gem "nokogiri"
gem "kaminari"
gem 'foreigner'

gem "paperclip"
gem "rmagick"
gem 'capistrano'
gem "breadcrumbs_on_rails"

gem "less-rails-bootstrap", '2.1.1'

# Awesome Nested Set GUI
gem 'haml'
gem 'the_sortable_tree'

gem 'datagrid'